{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "containers/*": [
        "containers/*"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "styles/*": [
        "styles/*"
      ],
      "providers/*": [
        "providers/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
}